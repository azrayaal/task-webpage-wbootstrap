
<%- include('partials/header') %>
<%- include('partials/navbar') %>

    <div class="container my-5">
      <div class="container shadow"  style="background-color: #F4F3F3; border-radius: 25px;">
        <div class="row py-3">
          <div class="col-md-4 col-12 d-flex justify-content-center align-items-center">
            <img src="<%= blog.image %>" class="card-img-top" alt="..." style="height: 400px;  border-radius: 25px;">
          </div>
          <div class="col-md-8 col-12 p-3 p-md-5">
           <div class="d-flex justify-content-end">
            <p>post:  <%= blog.postAt %></p>
           </div>
            <h1><%= blog.title %></h1>
            <h5 class=" fs-4" style="text-align: justify;"> <%= blog.content %></h5>
            <div class="technologies">
              <% blog.technologies.forEach((technology) => { %>
                <% if (technology === 'ReactJs') { %>
                  <i class="fa-brands fa-react"></i>
                <% } else if (technology === 'NodeJs') { %>
                  <i class="fa-brands fa-node-js"></i>
                <% } else if (technology === 'Go') { %>
                  <i class="fa-brands fa-golang"></i>
                <% }  %>
              <% }); %>
            </div>
              <hr>
              <div class="d-flex justify-content-start my-3">
             <!-- <div class="mr-3"> -->
              
               <p class="fw-bold ">
                 Start: 
                 <div class="fw-normal mx-2">
                   <%= blog.startDate %>. -
                 </div>
               </p>
        
           
               <p class="fw-bold ">
                End: 
                <div class="fw-normal mx-2">
                  <%= blog.endDate %>.
                </div>
              </p>
             <!-- </div> -->

              </div>
              <div class="d-flex justify-content-md-end justify-content-around">
                <a href="/blog-edit/<%= blog.id %>" style="text-decoration: none; margin-right: 25px;" >
                  <button class="buttonstyling btn  text-white px-4 py-1 mb-md-4 rounded-pill" style="background-color: #857ba1;" >EDIT</button>
                </a>
                <a href="/blog-delete/<%= blog.id %>" style="text-decoration: none;">
                  <button class="buttonstyling btn  text-white px-4 py-1 mb-md-4 rounded-pill" style="background-color: #857ba1;" >DELETE</button>
                </a>
              </div>
          </div>
        </div>
      </div>
    </div>

 
<%- include('partials/footer') %>