<%- include('partials/header') %>

<div class="container my-5">
  <div class="container bg-light p-4 rounded shadow">
    <div class="text-center">
      <h2>LOGIN PAGE</h2>
    </div>

    <form method="post" action="/login">
      <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Email address</label>
        <input name="email" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Insert your email here...">
      </div>
      <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Password</label>
        <input name="password" type="password" class="form-control" placeholder="Password Here..." >
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>

  </div>
</div>

<%- include('partials/footer') %>