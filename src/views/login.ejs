<%- include('partials/header') %>

<div class="container my-5">
  <div class="container bg-light p-4 rounded shadow">
    <div class="text-center">
      <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-success shadow "> <a class="nav-link fw-semibold" href="/"><i class="fa-solid fa-house"></i></a></button>
      </div>
      <h2>LOGIN PAGE</h2>
    </div>
    

    <form method="post" action="/login">
      <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Email address</label>
        <input name="email" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Insert your email here...">
      </div>
      <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Password</label>
        <input name="password" type="password" class="form-control" placeholder="Password Here..." >
      </div>
      <div class="d-flex justify-content-between ">
        <button type="submit" class="btn btn-primary shadow">Submit</button>
        <button type="submit" class="btn btn-warning shadow"> <a class="nav-link fw-semibold" href="/register">Register</a></button>
      </div>
    </form>

  </div>
</div>

<%- include('partials/footer') %>